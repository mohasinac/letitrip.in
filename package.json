    "quill": "^2.0.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.0",
    "react-quill": "^2.0.0",
    "recharts": "^3.3.0",
    "socket.io-client": "^4.8.1",
    "swagger-ui-react": "^5.30.2",
    "tailwind-merge": "^3.3.1",
    "use-debounce": "^10.0.6",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
