{
  "name": "letitrip-ecommerce",
  "version": "1.0.0",
  "private": true,
  "description": "Modern auction and e-commerce platform built with Next.js",
  "workspaces": [
    "react-library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mohasinac/letitrip.in"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "cross-env BASELINE_BROWSER_MAPPING_QUIET=1 BROWSERSLIST_IGNORE_OLD_DATA=1 next build",
    "start": "next start",
    "lint": "eslint src",
    "test": "node --max-old-space-size=16384 --expose-gc node_modules/jest/bin/jest.js --maxWorkers=4 --detectOpenHandles --logHeapUsage",
    "test:single": "jest --maxWorkers=1",
    "prettier": "npx prettier --write .",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:coverage": "node --max-old-space-size=8192 node_modules/jest/bin/jest.js --coverage --maxWorkers=25%",
    "test:fast": "jest --maxWorkers=75% --bail",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next node_modules",
    "clean:logs": "rm -rf logs/*.log",
    "setup:vercel": "node scripts/setup/setup-vercel-env.js",
    "setup:resend": "node scripts/setup/setup-resend-api.js",
    "setup:firebase-rules": "firebase deploy --only firestore:rules,firestore:indexes,storage,database",
    "setup:firebase-functions": "cd functions && npm install",
    "indexes:deploy": "node firestore-indexes/deploy-indexes.js",
    "indexes:dry-run": "node firestore-indexes/deploy-indexes.js --dry-run",
    "indexes:build": "node firestore-indexes/deploy-indexes.js --skip-deploy",
    "lib:dev": "cd react-library && npm run dev",
    "lib:build": "cd react-library && npm run build",
    "lib:test": "cd react-library && npm test",
    "lib:storybook": "cd react-library && npm run storybook",
    "lib:build-storybook": "cd react-library && npm run build-storybook",
    "functions:build": "cd functions && npm run build",
    "functions:serve": "cd functions && npm run serve",
    "functions:deploy": "firebase deploy --only functions",
    "functions:logs": "firebase functions:log",
    "deploy": "npm run build && git push origin main",
    "deploy:prod": "npm run build && vercel --prod --yes",
    "deploy:firebase": "npm run build && firebase deploy",
    "deploy:vercel": "node scripts/deployment/deploy-to-vercel-prod.js",
    "deploy:vercel:skip-env": "node scripts/deployment/deploy-to-vercel-prod.js --skip-env-update",
    "sync:env:bulk": "node scripts/deployment/bulk-set-vercel-env.js",
    "sync:env:bulk:dry-run": "node scripts/deployment/bulk-set-vercel-env.js --dry-run",
    "sync:env": "node scripts/deployment/sync-env-to-vercel.js",
    "db:migrate-categories": "node scripts/database/migrate-categories-multi-parent.js",
    "db:setup-test-users": "node scripts/database/setup-test-users.js",
    "dev:check-warnings": "node scripts/development/check-warnings.js",
    "dev:fix-async-params": "node scripts/development/fix-async-params.js",
    "dev:fix-ts-errors": "node scripts/development/fix-ts-errors.js",
    "dev:sonar": "node scripts/development/run-sonar.js"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@faker-js/faker": "^10.1.0",
    "@hookform/resolvers": "^5.2.2",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@tanstack/react-virtual": "^3.13.18",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "cookie": "^1.0.2",
    "date-fns": "^4.1.0",
    "express-rate-limit": "^8.2.1",
    "firebase": "^12.5.0",
    "firebase-admin": "^13.6.0",
    "i18next": "^25.7.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "isomorphic-dompurify": "^2.35.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.552.0",
    "next": "^16.1.1",
    "next-auth": "^4.24.13",
    "next-i18next": "^15.4.3",
    "pdfkit": "^0.17.2",
    "quill": "^2.0.3",
    "razorpay": "^2.9.6",
    "react": "^19.2.0",
    "react-d3-tree": "^3.6.6",
    "react-dom": "^19.2.0",
    "react-easy-crop": "^5.5.6",
    "react-hook-form": "^7.66.0",
    "react-i18next": "^16.3.5",
    "react-quill": "^2.0.0",
    "recharts": "^3.3.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "use-debounce": "^10.0.6",
    "winston": "^3.18.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@next/bundle-analyzer": "^16.0.3",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.28",
    "@types/pdfkit": "^0.17.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "autoprefixer": "^10.4.17",
    "critters": "^0.0.25",
    "cross-env": "^10.1.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lighthouse": "^13.0.1",
    "postcss": "^8.4.33",
    "sonarqube-scanner": "^4.3.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0"
  },
  "overrides": {
    "react-quill": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "quill": "^2.0.3"
    }
  }
}
