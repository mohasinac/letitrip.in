{
  "name": "letitrip-ecommerce",
  "version": "1.0.0",
  "private": true,
  "description": "Modern auction and e-commerce platform built with Next.js",
  "workspaces": [
    "react-library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mohasinac/letitrip.in"
  },
  "scripts": {
    "dev": "npm run lib:build && concurrently \"npm run dev:app\" \"npm run lib:dev\" --names \"app,lib\" --prefix-colors \"cyan,magenta\"",
    "dev:app": "next dev --turbopack",
    "build": "npm run lib:build && cross-env BASELINE_BROWSER_MAPPING_QUIET=1 BROWSERSLIST_IGNORE_OLD_DATA=1 next build",
    "start": "next start",
    "lint": "eslint src",
    "test": "jest --maxWorkers=4",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:coverage": "jest --coverage --maxWorkers=25%",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next node_modules",
    "clean:logs": "rm -rf logs/*.log",
    "lib:dev": "cd react-library && npm run dev",
    "lib:build": "cd react-library && npm run build",
    "lib:test": "cd react-library && npm test",
    "lib:storybook": "cd react-library && npm run storybook",
    "deploy:prod": "npm run build && vercel --prod --yes"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@faker-js/faker": "^10.1.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@mohasinac/react-library": "^1.0.1",
    "@sendgrid/mail": "^8.1.6",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-query-devtools": "^5.91.2",
    "bcryptjs": "^3.0.3",
    "cookie": "^1.0.2",
    "express-rate-limit": "^8.2.1",
    "firebase": "^12.5.0",
    "firebase-admin": "^13.6.0",
    "i18next": "^25.7.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "isomorphic-dompurify": "^2.35.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.552.0",
    "next": "^16.1.1",
    "next-auth": "^4.24.13",
    "next-i18next": "^15.4.3",
    "next-themes": "^0.4.6",
    "pdfkit": "^0.17.2",
    "quill": "^2.0.3",
    "razorpay": "^2.9.6",
    "react": "^19.2.0",
    "react-d3-tree": "^3.6.6",
    "react-dom": "^19.2.0",
    "react-easy-crop": "^5.5.6",
    "react-hook-form": "^7.66.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^16.3.5",
    "react-quill": "^2.0.0",
    "recharts": "^3.3.0",
    "resend": "^6.7.0",
    "sonner": "^2.0.7",
    "use-debounce": "^10.0.6",
    "winston": "^3.18.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@next/bundle-analyzer": "^16.0.3",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.28",
    "@types/pdfkit": "^0.17.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "concurrently": "^9.1.2",
    "critters": "^0.0.25",
    "cross-env": "^10.1.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0"
  },
  "overrides": {
    "react-quill": {
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "quill": "^2.0.3"
    }
  }
}
