rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // API-Only Architecture
    // ============================================
    // All uploads must go through API routes
    // Firebase Admin SDK (used in API routes) bypasses these rules
    
    // Allow public read for all files
    // Block all client-side writes
    match /{allPaths=**} {
      allow read: if true;  // Public read access
      allow write: if false; // All uploads via API routes only
    }
    
    // Note: Firebase Admin SDK automatically bypasses these rules
    // All file uploads happen server-side in /api routes with validation
  }
}
