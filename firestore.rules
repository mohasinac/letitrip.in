rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // API-Only Architecture
    // ============================================
    // All Firestore operations must go through API routes
    // Firebase Admin SDK (used in API routes) bypasses these rules
    // Client-side Firebase SDK is NOT used (except for Google OAuth)
    
    // Block all client-side access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Note: Firebase Admin SDK automatically bypasses these rules
    // All authenticated operations happen server-side in /api routes
  }
}
